import java.util.Scanner;
public class Main
{
    public static void main(String args[])
    {
        int rev=0,rem,n;
        Scanner sc= new Scanner(System.in);
        System.out.println("enter a number to be reversed : ");
        n=sc.nextInt();
        while(n!=0)
        {
            rem=n%10;
            rev=(rev*10)+rem;
            n=n/10;
        }
        System.out.println("reverse of number is "+rev);
    }
}
